{
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dist/**/*",
        "build/**/*",
        "test/**/*",
        "**/*.spec.ts",
        "**/*.test.ts",
        "node_modules/**/*"
    ],
    "compilerOptions": {
        "target": "es2021",
        "lib": [
            "esnext"
        ],
        "module": "amd",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "inlineSourceMap": true,
        "outDir": "./build",
        "removeComments": true,
        "importHelpers": true,
        "inlineSources": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
