{
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
        ".stryker-tmp",
        "build",
        "coverage",
        "node_modules",
        "reports"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 100,
            "functions": 100,
            "lines": 100,
            "statements": 100
        }
    },
    "coverageReporters": [
        "html",
        "text"
    ],
    "transform": {
        "^.+.tsx?$": [
            "ts-jest",
            {}
        ]
    }
}
